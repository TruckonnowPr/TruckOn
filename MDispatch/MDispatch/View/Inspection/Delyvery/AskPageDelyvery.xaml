                        <StackLayout Orientation="Horizontal">
                            <Button Text="{x:Static helperLang:LanguageHelper.IConfirmTheInspectionBtnText}"
                                    Clicked="Button_Clicked_10"
                                    FontSize="16"
                                    TextColor="#2C5DEB"
